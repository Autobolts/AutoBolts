<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_userdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.nielit.autobolts.Userdetails"
    android:background="@drawable/loginimage">

    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:id="@+id/txtEmail"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/txtAddress"
        android:layout_alignStart="@+id/txtAddress"
        android:id="@+id/txtCity"
        android:layout_width="280dp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="City"
        android:textSize="14sp"
        android:background="@color/loginTextView"
        android:backgroundTint="@color/loginTextView" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/txtCity"
        android:layout_alignStart="@+id/txtCity"
        android:layout_marginTop="25dp"
        android:id="@+id/txtPin"
        android:padding="10dp"
        android:hint="Pincode"
        android:textSize="14sp"
        android:background="@color/loginTextView"
        android:backgroundTint="@color/loginTextView" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/txtPin"
        android:layout_alignStart="@+id/txtPin"
        android:layout_marginTop="25dp"
        android:id="@+id/txtPhone"
        android:padding="10dp"
        android:background="@color/loginTextView"
        android:backgroundTint="@color/loginTextView"
        android:hint="Phone Number"
        android:textSize="14sp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:id="@+id/btnNext"
        android:backgroundTint="@color/loginTextView" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/txtAddress"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:hint="Address"
        tools:background="@color/loginTextView"
        android:backgroundTint="@color/loginTextView"
        android:textSize="14sp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail" />
</RelativeLayout>
