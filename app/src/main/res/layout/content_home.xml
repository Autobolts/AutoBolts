<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:layout_marginTop="50dp">

            <ScrollView
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.android.nielit.autobolts.MainActivity">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/periodicimage"
                            android:id="@+id/imgPeriodic"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:clickable="true"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            app:srcCompat="@drawable/bookimage"
                            android:id="@+id/imgBook"
                            android:scaleType="fitXY"
                            android:layout_below="@id/imgPeriodic"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/detailimage"
                            android:id="@+id/imgDetail"
                            android:layout_below="@id/imgBook"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:clickable="true" />

                            <TextView
                                android:text="Periodic Maintenance Chart"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_above="@+id/imgBook"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/textView3"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:elevation="5dp"
                                android:background="@color/home_text"
                                android:fontFamily="monospace"
                                android:paddingTop="15dp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:text="Locate Nearest Service Station"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_above="@+id/imgDetail"
                                android:layout_centerHorizontal="true"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:paddingTop="15dp"
                                android:elevation="5dp"
                                android:background="@color/home_text"
                                android:fontFamily="monospace" />

                            <TextView
                                android:id="@+id/textView5"
                                android:text="View Details"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:paddingTop="15dp"
                                android:elevation="5dp"
                                android:background="@color/home_text"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:fontFamily="monospace" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>