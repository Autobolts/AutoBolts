<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.nielit.autobolts.LoginActivity"
    android:background="@drawable/loginimage">

    <EditText
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsername"
        android:layout_weight="0.05"
        android:background="@color/loginTextView"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:layout_width="280dp"
        android:backgroundTint="@color/loginTextView"
        android:textAllCaps="false"
        android:hint="Username"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:fontFamily="monospace" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:textColorLink="@android:color/white"
        android:layout_height="40dp"
        android:background="@color/loginTextView"
        android:textColorHint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:layout_width="280dp"
        android:backgroundTint="@color/loginTextView"
        android:hint="Password"
        android:textSize="14sp"
        android:layout_below="@+id/txtUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:fontFamily="monospace" />

    <Button
        android:text="Login"
        android:layout_width="200dp"
        android:id="@+id/btnLogin"
        android:layout_height="40dp"
        android:background="@color/loginButton"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace" />

    <Button
        android:text="Forgot Password?"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btnPwd"
        android:background="@color/loginText"
        android:textColor="@color/textColor"
        android:textAllCaps="false"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace" />

    <Button
        android:text="New User?"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btnSingup"
        android:background="@color/loginText"
        android:textColor="@color/textColor"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:layout_below="@+id/btnPwd"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
